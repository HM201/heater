                    android:id="@+id/blue4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked1"
                    android:text="blue" />

                <RadioButton
                    android:id="@+id/yellow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked1"
                    android:text="yellow" />

                <RadioButton
                    android:id="@+id/cyan4"
                    android:layout_width="wrap_content"
